{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>IsVerified</th>
				<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>nickname</th>
				<td>{{ user.nickname }}</td>
			</tr>
			{% if user.picture %}
				<tr>
					<th>picture</th>
					<td><img src="{{ asset('/pictures/'~picture.pictureFileName) }}" alt="" class="portraitPicture"></td>
				</tr>
			{% endif %}
		</tbody>
	</table>

	{# <img src="{{ asset('/pictures/'~picture.pictureFileName) }}" alt="" width="50"> #}

	<a href="{{ path('user_index') }}">back to list</a>

	<a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

	{{ include('user/_delete_form.html.twig') }}
{% endblock %}
