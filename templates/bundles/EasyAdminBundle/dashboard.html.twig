{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title 'Bienvenue sur le dashboard Snowtricks' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-6 alert-info">
                <span class="display-3">{{countAllUser}} users</span>
            </div>
            <div class="col-6 alert-success">
                <span class="display-3">{{countAllTrick}}  tricks</span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 alert-info">
                <p class="h3">Liste des types de figures</p>
                <ul class="list-group">
                    {% for pool in pools %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="badge badge-primary badge-pill">{{pool.name}}</span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}