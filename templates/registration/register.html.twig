{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<h1>S'inscrire</h1>

	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.nickname, {
			'attr':{'placeholder':"surnom avec lequel vous serez identifier sur le site"},
			'label': "Surnom"
		}) }}
	{{ form_row(registrationForm.email) }}
	{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
	{{ form_row(registrationForm.picture, {
            label: 'Votre photo'
        }) }}
	{{ form_row(registrationForm.agreeTerms, {
            label: 'Accepter les conditions du site'
        }) }}

	<button type="submit" class="btn btn-primary">S'inscrire</button>
	{{ form_end(registrationForm) }}
{% endblock %}
