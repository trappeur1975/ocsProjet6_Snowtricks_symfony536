{% form_theme form 'bootstrap_5_layout.html.twig' %}

{{ form_start(form) }}
{{ form_row(form.name, {'attr':{'placeholder':"description du trick"}, 'label': "Nom"}) }}
{{ form_row(form.description, {'attr':{'placeholder':"description du trick"}}) }}
{{ form_row(form.pool, {'label': "Groupe de figure du trick"}) }}
{{ form_row(form.user, {'label': "Auteur"}) }}
{{ form_row(form.pictures, {'help':'Selectionner plusieurs images en une seul fois si vous souhaiter rajouter plusieurs images au trick que vous cr√©ez.', 'label': "Images"}) }}

{# check that the route is "trick_edit" to display the pictures #}
{% if app.request.attributes.get('_route') =='trick_edit' %}
	<h2>Images du trick</h2>
	{% for picture in trick.pictures %}
		<img src="{{ asset('/pictures/'~picture.pictureFileName) }}" alt="" class="portraitPicture">
		<a href="{{path('trick_delete_picture', {id: picture.id})}}" data-delete data-token="{{ csrf_token('delete'~picture.id) }}">Suppimer</a>
	{% endfor %}
{% endif %}
