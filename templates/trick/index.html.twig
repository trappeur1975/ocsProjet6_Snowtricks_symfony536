{% extends 'base.html.twig' %}

{% block title %}Trick index
{% endblock %}

{% block body %}
	<h1>Trick index</h1>

	{# flash message for creating, editing or deleting a trick  #}
	{% for message in app.flashes('successTrickManagement') %}
		<div class="alert alert-success" role="alert">{{ message }}</div>
	{% endfor %}

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for trick in tricks %}

				<tr>
					<td>{{ trick.id }}</td>
					<td>{{ trick.name }}</td>
					<td>{{ trick.description }}</td>
					<td>
						<a href="{{ path('trick_show', {'slug': trick.slug}) }}" class="btn btn-success">Voir le trick</a><br>
						{% if app.user is same as trick.user %}
							<a href="{{ path('trick_edit', {'id': trick.id}) }}" class="btn btn-warning">Modifier le trick</a><br>
							{{ include('trick/_delete_form.html.twig') }}<br>
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	
	<p><a href="{{ path('trick_new') }}" class="btn btn-success">Cr√©er un nouveau trick</a></p>
	
{% endblock %}
